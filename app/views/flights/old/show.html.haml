- if notice.present?
  %p.notice= notice

= render @flight

%div.actions
  = link_to "Edit this flight", edit_flight_path(@flight), class: "btn btn-primary"
  = link_to "Back to flights", flights_path, class: "btn btn-secondary"
  = link_to "Destroy this flight", @flight, 
            method: :delete, 
            data: { confirm: "Are you sure you want to delete this flight?" }, 
            class: "btn btn-danger"
